//T.C : O(n)
//S.C : O(n)
class Solution {
    public String breakPalindrome(String palindrome) {
        int l=palindrome.length();
        StringBuilder str=new StringBuilder(palindrome);
        for(int i=0; i<l/2;i++){
            if(palindrome.charAt(i)!='a'){
                str.setCharAt(i,'a');
                return str.toString();
            }
        }
        //all a : aaaa-> aaab
        if(l==1) return "";
        str.setCharAt(l-1,'b');
        return str.toString();
    }
}
