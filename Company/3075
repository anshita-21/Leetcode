//t.c: O(nlogn)
//s.c: o(n)
class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        //java default heap->min
        PriorityQueue<Integer> pq=new PriorityQueue<>(Collections.reverseOrder());
        for(int i:happiness){
            pq.add(i); 
        }
        int c=0;
        long res=0; //with int doesnt work
        for(int i=0;i<k;i++){
            int h=pq.poll();
            res+=Math.max(h-c,0);//not to futher reduce -1
            c++;
        }
        return res;
    }
}
